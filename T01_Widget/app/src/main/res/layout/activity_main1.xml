    <TextView
        android:id="@+id/textViewID"
        android:layout_marginLeft="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:"
        android:textSize="30dp"
        android:layout_marginTop="100dp"
        />
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textViewID"
        android:layout_alignBaseline="@id/textViewID"
        />

    <TextView
        android:id="@+id/textViewPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PW:"
        android:textSize="30dp"
        android:layout_below="@id/textViewID"
        android:layout_alignRight="@id/textViewID"
        />
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textViewPW"
        android:layout_alignBaseline="@id/textViewPW"
        />
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_below="@id/textViewPW"
        android:layout_alignLeft="@id/textViewPW"
        
        />

